{% macro projectCard(title, summary, progressValue, progressMax, coverSrc, coverAlt) %}
<article class="project-card">
  <section class="project-card__graph">
    {% if coverSrc %}
      <img class="project-card__cover" src="{{ coverSrc }}" alt="{{ coverAlt }}">
    {% else %}
      <div class="project-card__cover"></div>
    {% endif %}
    <progress class="project-card__progress" value="{{ progressValue }}" max="{{ progressMax }}"></progress>
  </section>
  <section class="project-card__text">
    <h3 class="project-card__title">{{ title }}</h3>
    <p class="project-card__description">{{ summary }}</p>
  </section>
</article>
{% endmacro %}